<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>

        <!-- Commands -->

        <service id="SwagVueStorefront\VueStorefront\Bundle\Command\DumpPluginConfigurationCommand">
            <argument type="service" id="SwagVueStorefront\VueStorefront\Bundle\ConfigurationService"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\Bundle\AssetService"/>
            <tag name="console.command"/>
        </service>

        <!-- Controllers -->

        <service id="SwagVueStorefront\Shopware\Controller\Api\PwaController" public="true">
            <call method="setContainer">
                <argument id="service_container" type="service"/>
            </call>
            <argument id="SwagVueStorefront\VueStorefront\Bundle\ConfigurationService" type="service"/>
            <argument id="SwagVueStorefront\VueStorefront\Bundle\AssetService" type="service"/>
    </service>


        <!-- Services -->

        <service id="SwagVueStorefront\VueStorefront\Bundle\ConfigurationService">
            <argument type="service" id="kernel" />
            <argument id="plugin.repository" type="service"/>
            <argument type="service" id="Shopware\Core\System\SystemConfig\SystemConfigService"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\Bundle\Helper\FormattingHelper"/>
            <argument type="service" id="shopware.filesystem.public"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Bundle\AssetService">
            <argument type="service" id="kernel" />
            <argument id="plugin.repository" type="service"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\Bundle\Helper\FormattingHelper"/>
            <argument type="service" id="shopware.filesystem.public"/>
            <tag name="kernel.event_subscriber"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Bundle\Helper\FormattingHelper"/>

    </services>
</container>
