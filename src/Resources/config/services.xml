<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <!-- Controllers -->

        <service id="SwagVueStorefront\VueStorefront\Controller\RouteController" public="true">
            <argument id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository" type="service"/>
            <argument id="Shopware\Core\Framework\DataAbstractionLayer\Search\RequestCriteriaBuilder" type="service"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Controller\ContextController" public="true">
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <service id="SwagVueStorefront\VueStorefront\Controller\PageController" public="true">
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageLoader\Context\PageLoaderContextBuilder"/>
            <argument type="tagged" tag="vsf.page_loader"/>
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
        </service>

        <!-- Page loader context builder -->

        <service id="SwagVueStorefront\VueStorefront\PageLoader\Context\PageLoaderContextBuilder">
            <argument id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository" type="service"/>
        </service>


        <!-- Page loaders -->

        <service id="SwagVueStorefront\VueStorefront\PageLoader\ProductPageLoader">
            <argument id="Shopware\Storefront\Page\Product\ProductPageLoader" type="service"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageResult\Product\ProductPageResultHydrator"/>
            <tag name="vsf.page_loader"/>
        </service>

        <service id="SwagVueStorefront\VueStorefront\PageLoader\NavigationPageLoader">
            <argument type="service" id="sales_channel.category.repository"/>
            <argument type="service" id="Shopware\Core\Content\Cms\SalesChannel\SalesChannelCmsPageLoader"/>
            <argument type="service" id="SwagVueStorefront\VueStorefront\PageResult\Navigation\NavigationPageResultHydrator"/>
            <tag name="vsf.page_loader"/>
        </service>

        <!-- Page hydrators -->

        <service id="SwagVueStorefront\VueStorefront\PageResult\Product\ProductPageResultHydrator"/>

        <service id="SwagVueStorefront\VueStorefront\PageResult\Navigation\NavigationPageResultHydrator"/>


        <!-- Repositories -->

        <service id="SwagVueStorefront\VueStorefront\Entity\SalesChannelRoute\SalesChannelRouteRepository">
            <argument id="seo_url.repository" type="service"/>
        </service>

    </services>

</container>
